<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imageInCollectionPointProviderNotificationsListView"
        android:layout_marginTop="15dp"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:src="@drawable/notification"/>

    <LinearLayout
        android:id="@+id/titleNotificationCollectionPointProviderLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/imageInCollectionPointProviderNotificationsListView"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titleNotificationCollectionPointProvider"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notification"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pathLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@+id/imageInCollectionPointProviderNotificationsListView"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/descriptionNotificationCollectionPointProvider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Your reservation has been accepted"
            android:textSize="16sp"
            android:textColor="@color/black" />

    </LinearLayout>

    <TextView
        android:id="@+id/timeNotificationCollectionPointProvider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_below="@+id/pathLinearLayout"
        android:layout_toEndOf="@+id/imageInCollectionPointProviderNotificationsListView"
        android:layout_marginTop="4dp"
        style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
        android:text="10:00 AM" />



</RelativeLayout>